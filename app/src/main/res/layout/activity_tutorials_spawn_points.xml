<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
    >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageViewTutorials"
        android:src="@drawable/ic_tutorials_spawns_points_1"
        android:scaleType = "centerCrop"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tutorialsLinearLayoutTop"
        android:background="#dc000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spawn Points"
            android:id="@+id/textView7"
            android:background="@null"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:textColor="#FFFFFFFF"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerTutorialsMenu"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="5dp"
            android:spinnerMode="dropdown"
            android:dropDownSelector="#ffffff"
            android:theme="@style/customSpinnerTheme"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/tutorialsLinearLayoutTop"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/10"
            android:id="@+id/tutorialsPageNumber"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/Tutorials_Circles_1"
            android:id="@+id/textViewTutorials"
            style="@style/TutorialText"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/buttonArrowLeft"
        android:src="@drawable/ic_chevron_left_white_48dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="false"
        android:layout_centerInParent="true"
        android:alpha=".3"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/buttonArrowRight"
        android:src="@drawable/ic_chevron_right_white_48dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:alpha=".3"/>

</RelativeLayout>